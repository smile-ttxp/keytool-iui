<?xml version="1.0" encoding="iso-8859-1"?>
<project name="KeyTool IUI" default="run" basedir=".">

  <path id="classpath.main">
    <fileset dir="libs/external">
      <include name="**/*.jar"/>
    </fileset>
    <pathelement location="libs/internal/HelpMain"/>
    <pathelement location="libs/internal/resourceMain"/>
    <pathelement location="libs/internal/resourceShared"/>
    <pathelement path="${java.home}/lib/javaws.jar"/>
  </path>    

  <target name="compile">
    <mkdir dir="build"/>
    <javac debug="yes" destdir="build" target="1.6" fork="true" memoryMaximumSize="256m" encoding="iso-8859-1">
      <src path="src/KtlIuiMain"/>
      <src path="src/KtlIuiShared"/>
      <classpath>
        <path refid="classpath.main"/>
      </classpath>
    </javac>
  </target>  

  <target name="run" depends="compile">
    <java classname="com.google.code.p.keytooliui.ktl.UIKeytool" fork="true">
      <jvmarg value="-Xmx512m"/>
      <classpath>
        <pathelement path="build" />
        <path refid="classpath.main"/>
      </classpath>
    </java>
  </target>

  <target name="clean">
    <delete dir="build"/>
  </target>

</project>
